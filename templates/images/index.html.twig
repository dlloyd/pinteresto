{% extends 'base.html.twig' %}

{% block title %}Mes photos!{% endblock %}

{% block body %}
<div class="jumbotron border-round-0 min-50vh" style="background-image:url(https://images.unsplash.com/photo-1522204657746-fccce0824cfd?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=84b5e9bea51f72c63862a0544f76e0a3&auto=format&fit=crop&w=1500&q=80);">
</div>
<div class="container mb-4">
  <img src="{{asset('assets/img/av.png')}}" class="mt-neg100 mb-4 rounded-circle" width="128">
  <h1 class="font-weight-bold title">{{app.user.username}}</h1>
  <h4>Cr√©dit : {{app.user.credit}} </h4>

  {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
  {% endfor %}
</div>
<div class="container-fluid mb-5">
  <div class="row">
    <div class="card-columns">
      {% for image in images %}
      <div class="card card-pin">
        <img class="card-img" src="{{image.getImageUrl}}" alt="image">
        <div class="overlay">
          <h2 class="card-title title"> {{image.name}} </h2>
          <div class="more">
            <a href="{{ path('my_single_image',{id:image.id}) }}">
            <i class="fa fa-arrow-circle-o-right" aria-hidden="true"></i> Voir plus </a>


          </div>
        </div>
      </div>
      {% endfor %}

    </div>
  </div>
</div>

{% endblock %}
