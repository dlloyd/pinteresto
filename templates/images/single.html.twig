{% extends 'base.html.twig' %}
{% block body %}
<section class="bg-gray200 pt-5 pb-5">
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-7">
      <article class="card">
      <img class="card-img-top mb-2" src="{{image.getImageUrl}}" alt="image">
      <div class="card-body">
        <h1 class="card-title display-4">
        {{image.name}} </h1>

      </div>
      </article>
    </div>
  </div>
</div>
<div class="container-fluid mt-5">
  <div class="row">
    <h5 class="font-weight-bold">Images Similaires</h5>
    <div class="card-columns">
      {% for img in image.category.getImages %}
      {% if img.id != image.id  %}
      <div class="card card-pin">
        <img class="card-img" src="{{img.getImageUrl}}" alt="image">
        <div class="overlay">
          <h2 class="card-title title"> {{img.name}} </h2>
          <div class="more">
            <a href="{{ path('single_image',{id:img.id}) }}">
            <i class="fa fa-arrow-circle-o-right" aria-hidden="true"></i> Voir plus </a>
          </div>
        </div>
      </div>
      {% endif %}
      {% endfor %}


    </div>
  </div>
</div>
</section>
{% endblock %}
